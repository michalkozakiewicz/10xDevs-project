---
import Layout from "@/layouts/Layout.astro";
import { TopBar } from "@/components/TopBar";
import { SessionsDashboard } from "@/components/sessions/SessionsDashboard";

// TODO: Autentykacja JWT będzie dodana później
// Na razie używamy domyślnego użytkownika z env
const userInfo = {
  email: import.meta.env.DEFAULT_USER_EMAIL || "user@example.com",
  avatarUrl: undefined,
};
---

<Layout title="Twoje sesje planowania - BucketEstimate AI">
  <TopBar user={userInfo} client:load />
  <SessionsDashboard client:load />
</Layout>
